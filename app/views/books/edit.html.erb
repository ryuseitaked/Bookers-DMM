<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>
<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
